<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".client_post">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/Purple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/simonetta"
            android:text="Post Problem"
            android:textColor="#fff"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#4FD558">

        <TextView
            android:id="@+id/grpid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/date_clientpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/simonetta"
            android:hint="2019-11-26"
            android:textColor="@color/Purple"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@id/date_clientpost"
            android:fontFamily="@font/simonetta"
            android:text="Date:"
            android:textColor="@color/Purple"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.4"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinner_clientnames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:outlineSpotShadowColor="#292929">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/v1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/simonetta"
                            android:text="UID:"
                            android:textColor="@color/Purple"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/UID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_toRightOf="@id/v1"
                            android:fontFamily="@font/simonetta"
                            android:text="15798U"
                            android:textColor="@color/Purple"
                            android:textSize="22sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/v2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v1"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/simonetta"
                            android:text="Item Group *:"
                            android:textColor="@color/Purple"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/itemtype_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v1"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/v2"
                            android:fontFamily="@font/simonetta" />

                        <EditText
                            android:id="@+id/serialno_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/itemtype_clientpost"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/v2"
                            android:fontFamily="@font/simonetta"
                            android:hint="Serial no" />

                        <EditText
                            android:id="@+id/size_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/serialno_clientpost"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/v2"
                            android:fontFamily="@font/simonetta"
                            android:hint="Size" />

                        <EditText
                            android:id="@+id/model_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/size_clientpost"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/v2"
                            android:fontFamily="@font/simonetta"
                            android:hint="Model" />

                        <TextView
                            android:id="@+id/v111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/model_clientpost"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/simonetta"
                            android:text="Item specification *:"
                            android:textColor="@color/Purple"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/specification_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v111"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/simonetta"
                            android:hint="Type item specification here" />

                        <TextView
                            android:id="@+id/v3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/specification_clientpost"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/simonetta"
                            android:text="Problem *:"
                            android:textColor="@color/Purple"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/problem_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v3"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/simonetta"
                            android:hint="Type your problem here" />

                        <RadioGroup
                            android:id="@+id/radiogroup_client"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/problem_clientpost"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:fontFamily="@font/simonetta"
                                android:text="Free"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:fontFamily="@font/simonetta"
                                android:text="Paid"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                        </RadioGroup>

                        <Button
                            android:layout_centerHorizontal="true"
                            android:id="@+id/btn_addnew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/radiogroup_client"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorAccent"
                            android:text="Add"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_marginStart="20dp"
                            android:layout_toRightOf="@id/btn_addnew"
                            android:id="@+id/post_btn_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/radiogroup_client"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="#8080"
                            android:fontFamily="@font/simonetta"
                            android:text="Save" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TableLayout
                    android:id="@+id/tbllayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:stretchColumns="2">

                    <TableRow android:background="@color/colorAccent">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_weight="0"
                            android:text="Group"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="127dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"

                            android:layout_weight="0"

                            android:text="Specs"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="93dp"
                            android:layout_height="match_parent"
                            android:layout_column="2"

                            android:layout_weight="0"

                            android:text="Problem"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </TableRow>


                </TableLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_postclient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</LinearLayout>