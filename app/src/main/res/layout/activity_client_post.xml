<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".client_post">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Post Problem"
            android:textColor="@color/Purple"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="UID:"
            android:textColor="@color/Purple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/v1"
            android:text="15798U"
            android:textColor="@color/Purple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_clientpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="2019-11-26"
            android:textColor="@color/Purple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@id/date_clientpost"
            android:text="Date:"
            android:textColor="@color/Purple"
            android:textSize="22sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:outlineSpotShadowColor="#292929"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/v2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Item Type:"
                            android:textColor="@color/Purple"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/itemtype_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/v2" />

                        <EditText
                            android:id="@+id/otheritem_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/itemtype_clientpost"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/v2"
                            android:hint="Item type(if other)" />

                        <TextView
                            android:id="@+id/v3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/otheritem_clientpost"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Specification:"
                            android:textColor="@color/Purple"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/specification_clientpost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v3"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="15dp"
                            android:hint="Type item specification here" />

                        <RadioGroup
                          android:id="@+id/radiogroup_client"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/specification_clientpost"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:text="Free(Warranty)"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:text="Paid"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                        </RadioGroup>


                        <Button
                            android:id="@+id/post_btn_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/radiogroup_client"
                            android:layout_marginTop="20dp"
                            android:text="Post"
                            android:layout_marginBottom="20dp"
                            android:layout_centerInParent="true"
                            android:background="#8080"/>



                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</LinearLayout>