<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/simonetta"
                android:hint="Nawarang Tv center"
                android:textColor="#E83F2C2C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobile_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_user"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/simonetta"
                android:hint="Television"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/type_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile_user"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:fontFamily="@font/simonetta"
                android:hint="2019-11-11"

                android:textSize="20sp" />

            <Button
                android:id="@+id/enable_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="10dp"
                android:background="#A0E73D"
                android:fontFamily="@font/simonetta"
                android:text="Enable"

                android:textStyle="bold" />

            <Button
                android:id="@+id/disable_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/enable_user"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="#E24949"
                android:fontFamily="@font/simonetta"
                android:text="Disable"

                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>